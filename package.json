{
  "name": "ts-node",
  "version": "1.0.0",
  "main": "index.js",
  "type": "module",
  "repository": "git@github.com:mkvlrn/ts-node",
  "author": "Mike Valeriano <mkvlrn@gmail.com>",
  "license": "MIT",
  "scripts": {
    "build": "pnpm tsc -p tsconfig.build.json",
    "postbuild": "pnpm tsc-alias -p tsconfig.build.json",
    "check-types": "pnpm tsc-files",
    "dev": "pnpm tsx watch --ignore **/*.test.ts src/index.ts",
    "format": "pnpm prettier --write",
    "lint": "pnpm eslint --fix",
    "prebuild": "pnpm rimraf build",
    "prepare": "pnpm husky install",
    "start": "node build",
    "test-cov": "rimraf coverage && pnpm vitest run --coverage",
    "test-staged": "pnpm vitest related --run",
    "test": "pnpm vitest --run"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.6.6",
    "@commitlint/config-conventional": "^17.6.6",
    "@mkvlrn/eslint-config": "^20.1.2",
    "@mkvlrn/prettier-config": "^20.0.1",
    "@mkvlrn/tsconfig": "^1.0.7",
    "@trivago/prettier-plugin-sort-imports": "^4.1.1",
    "@types/node": "^20.3.3",
    "@typescript-eslint/eslint-plugin": "^5.61.0",
    "@typescript-eslint/parser": "^5.61.0",
    "@vitest/coverage-v8": "^0.32.4",
    "eslint": "^8.44.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-import-resolver-typescript": "^3.5.5",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-jsx-a11y": "^6.7.1",
    "eslint-plugin-react": "^7.32.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-unicorn": "^47.0.0",
    "eslint-plugin-vitest": "^0.2.6",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.3",
    "prettier": "^2.8.8",
    "rimraf": "^5.0.1",
    "ts-node": "^10.9.1",
    "tsc-alias": "^1.8.7",
    "tsc-files": "^1.1.4",
    "tsx": "^3.12.7",
    "typescript": "^5.1.6",
    "vitest": "^0.32.4"
  },
  "eslintConfig": {
    "root": true,
    "parserOptions": {
      "project": "./tsconfig.json"
    },
    "extends": [
      "@mkvlrn"
    ]
  },
  "prettier": "@mkvlrn/prettier-config",
  "lint-staged": {
    "*.(ts|tsx)": [
      "pnpm check-types",
      "pnpm lint",
      "pnpm format",
      "pnpm test-staged"
    ],
    "*.json": [
      "pnpm format"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  }
}
