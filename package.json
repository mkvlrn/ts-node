{
  "name": "ts-node",
  "version": "1.0.0",
  "main": "index.js",
  "type": "module",
  "repository": "git@github.com:mkvlrn/ts-node",
  "author": "Mike Valeriano <mkvlrn@gmail.com>",
  "license": "MIT",
  "scripts": {
    "build": "yarn tsc -p tsconfig.build.json",
    "postbuild": "yarn tsc-alias -p tsconfig.build.json",
    "check-types": "yarn tsc-files",
    "dev": "yarn tsx watch --ignore **/*.test.ts src/index.ts",
    "format": "yarn prettier --write",
    "lint": "yarn eslint --fix",
    "prebuild": "yarn rimraf build",
    "prepare": "yarn husky install",
    "start": "node build",
    "test-cov": "rimraf coverage && yarn vitest run --coverage",
    "test-staged": "yarn vitest related --run",
    "test": "yarn vitest --run"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.6.5",
    "@commitlint/config-conventional": "^17.6.5",
    "@mkvlrn/eslint-config": "^20.1.0",
    "@mkvlrn/prettier-config": "^20.0.1",
    "@mkvlrn/tsconfig": "^1.0.7",
    "@trivago/prettier-plugin-sort-imports": "^4.1.1",
    "@types/node": "^20.3.1",
    "@typescript-eslint/eslint-plugin": "^5.59.11",
    "@typescript-eslint/parser": "^5.59.11",
    "@vitest/coverage-v8": "^0.32.2",
    "eslint": "^8.43.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-import-resolver-typescript": "^3.5.5",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-jsx-a11y": "^6.7.1",
    "eslint-plugin-react": "^7.32.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-unicorn": "^47.0.0",
    "eslint-plugin-vitest": "^0.2.6",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.2",
    "prettier": "^2.8.8",
    "rimraf": "^5.0.1",
    "ts-node": "^10.9.1",
    "tsc-alias": "^1.8.6",
    "tsc-files": "^1.1.3",
    "tsx": "^3.12.7",
    "typescript": "^5.1.3",
    "vitest": "^0.32.2"
  },
  "eslintConfig": {
    "root": true,
    "parserOptions": {
      "project": "./tsconfig.json"
    },
    "extends": [
      "@mkvlrn"
    ]
  },
  "prettier": "@mkvlrn/prettier-config",
  "lint-staged": {
    "*.(ts|tsx)": [
      "yarn check-types",
      "yarn lint",
      "yarn format",
      "yarn test-staged"
    ],
    "*.json": [
      "yarn format"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  }
}
