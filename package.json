{
  "name": "ts-node",
  "version": "1.0.0",
  "main": "index.js",
  "type": "module",
  "repository": "git@github.com:mkvlrn/ts-node",
  "author": "Mike Valeriano <mkvlrn@gmail.com>",
  "license": "MIT",
  "scripts": {
    "build": "yarn tsc -p tsconfig.build.json",
    "postbuild": "yarn tsc-alias -p tsconfig.build.json",
    "check-types": "yarn tsc-files",
    "dev": "yarn tsx watch --ignore **/*.test.ts src/index.ts",
    "format": "yarn prettier --write",
    "lint": "yarn eslint --fix",
    "prebuild": "yarn rimraf build",
    "prepare": "yarn husky install",
    "start": "node build",
    "test-cov": "rimraf coverage && yarn vitest run --coverage",
    "test-staged": "yarn vitest related --run",
    "test": "yarn vitest --run"
  },
  "devDependencies": {
    "@commitlint/cli": "^18.4.2",
    "@commitlint/config-conventional": "^18.4.2",
    "@mkvlrn/eslint-config": "^23.11.0",
    "@mkvlrn/prettier-config": "^23.11.0",
    "@mkvlrn/tsconfig": "^23.9.1",
    "@trivago/prettier-plugin-sort-imports": "^4.3.0",
    "@types/node": "^20.9.0",
    "@typescript-eslint/eslint-plugin": "^6.11.0",
    "@typescript-eslint/parser": "^6.11.0",
    "@vitest/coverage-v8": "^0.34.6",
    "eslint": "^8.53.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-airbnb-typescript": "^17.1.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-jsx-a11y": "^6.8.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-unicorn": "^49.0.0",
    "eslint-plugin-vitest": "^0.3.9",
    "husky": "^8.0.3",
    "lint-staged": "^15.1.0",
    "prettier": "^3.1.0",
    "rimraf": "^5.0.5",
    "ts-node": "^10.9.1",
    "tsc-alias": "^1.8.8",
    "tsc-files": "^1.1.4",
    "tsx": "^4.1.2",
    "typescript": "^5.2.2",
    "vitest": "^0.34.6"
  },
  "eslintConfig": {
    "root": true,
    "parserOptions": {
      "project": "./tsconfig.json"
    },
    "extends": [
      "@mkvlrn"
    ]
  },
  "prettier": "@mkvlrn/prettier-config",
  "lint-staged": {
    "*.(ts|tsx)": [
      "yarn check-types",
      "yarn lint",
      "yarn format",
      "yarn test-staged"
    ],
    "*.json": [
      "yarn format"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  }
}
