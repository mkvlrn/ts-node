{
  "name": "ts-node",
  "version": "1.0.0",
  "main": "index.js",
  "repository": "git@github.com:mkvlrn/ts-node",
  "author": "Mike Valeriano <mkvlrn@gmail.com>",
  "license": "MIT",
  "type": "module",
  "module": "build/index.js",
  "scripts": {
    "build": "esbuild ./src/*.ts ./src/**/*.ts --outdir=./build --platform=node --target=node20 --format=esm",
    "postbuild": "yarn tsc-alias && find ./build -name '*.test.js' -type f -delete",
    "check-types": "yarn tsc-files",
    "dev": "yarn tsx watch --ignore **/*.test.ts src/index.ts",
    "format-lint": "yarn biome check --apply",
    "prebuild": "rm -rf build",
    "prepare": "yarn husky install",
    "start": "node build",
    "test-cov": "rm -rf coverage && NODE_V8_COVERAGE=coverage node --import tsx --experimental-test-coverage --test ./src/**/*.test.ts ",
    "test": "node --import tsx --test ./src/**/*.test.ts"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.4.1",
    "@commitlint/cli": "^18.4.3",
    "@commitlint/config-conventional": "^18.4.3",
    "@types/node": "^20.10.6",
    "esbuild": "^0.19.11",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "tsc-alias": "^1.8.8",
    "tsc-files": "^1.1.4",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
  }
}
